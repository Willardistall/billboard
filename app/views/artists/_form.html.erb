<h1><%= @artist.id ? 'Edit Artist' : 'Create Artist' %></h1>
<hr />
<%= form_with(model: [@billboard, @artist], local: true, class: "ui form") do |f| %>
  <%= f.label :artist_name %>
  <%= f.text_field :artist_name, required: true, autofocus: true %>
  <br />
  <%= f.label :description %>
  <%= f.text_field :description, required: true %>
  <br />
  <%# f.label :avatar %>
  <%# f.text_field :avatar, required: true %>
  <br />
  <br />
  <%= f.submit nil, class: "ui button" %>
<% end %>
